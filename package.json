{
  "name": "liberty-engine",
  "version": "0.4.0",
  "engines": {
    "node": ">=8"
  },
  "private": true,
  "scripts": {
    "setup": "git submodule init && git submodule update && bin/install && cd view && npm i --unsafe-perm && node_modules/.bin/nuxt build",
    "dev": "NODE_ENV=development bin/www",
    "start": "pm2 start ecosystem.config.js",
    "status": "pm2 status ecosystem.config.js",
    "stop": "pm2 stop ecosystem.config.js",
    "delete": "pm2 delete ecosystem.config.js",
    "upgrade": "pm2 kill && git submodule update && npm i --unsafe-perm && node_modules/.bin/sequelize db:migrate && cd view && npm i --unsafe-perm && node_modules/.bin/nuxt build && cd .. && npm run start",
    "log": "pm2 log --lines 100",
    "test": "node_modules/.bin/mocha --recursive -u exports tests/api",
    "benchmark": "node_modules/.bin/mocha --recursive -u exports tests/benchmark",
    "mkdoc": "yuidoc -c ./docs/yui.json",
    "docserver": "yuidoc --server -c ./docs/yui.json",
    "lint": "eslint ./lib"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "eslint": "^5.0.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "mocha": "^5.2.0"
  },
  "dependencies": {
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "cheerio": "^1.0.0-rc.2",
    "colors": "^1.3.0",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-validator": "^5.2.0",
    "helmet": "^3.12.1",
    "highlight.js": "^9.12.0",
    "html-minifier": "^3.5.17",
    "i18next": "^11.3.3",
    "inquirer": "^6.0.0",
    "ip": "^1.1.5",
    "jsonwebtoken": "^8.3.0",
    "katex": "^0.9.0",
    "lodash": "^4.17.10",
    "mathjs": "^5.0.0",
    "moment": "^2.22.2",
    "morgan": "^1.9.0",
    "multer": "^1.3.1",
    "mysql2": "^1.5.3",
    "node-telegram-bot-api": "^0.30.0",
    "nodemailer": "^4.6.7",
    "pm2": "^2.10.4",
    "promise-redis": "0.0.5",
    "sanitize-html": "^1.18.2",
    "sax": "^1.2.4",
    "sequelize": "^4.38.0",
    "sequelize-cli": "^4.0.0",
    "striptags": "^3.1.1",
    "swagger-ui": "^3.17.1",
    "uuid": "^3.3.2",
    "validator": "^10.4.0"
  }
}
